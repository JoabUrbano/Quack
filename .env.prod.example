# Production Environment Configuration
NODE_ENV=production

# Database Configuration (Production)
DB_PASSWORD=your_secure_password_here

# JWT Configuration (Production)
JWT_SECRET=your_very_secure_jwt_secret_here_change_this
JWT_EXPIRATION=3600

# CORS Configuration (Production)
CORS_ORIGIN=https://yourdomain.com,https://api.yourdomain.com

# Redis (Production)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# API Keys (Production)
API_KEY_IMDTRAVEL=your_production_api_key_here
API_KEY_AIRLINESHUB=your_production_api_key_here

# Logging
LOG_LEVEL=warn

# Service URLs (for inter-service communication)
IMDTRAVEL_URL=http://imdtravel:3000
AIRLINESHUB_URL=http://airlineshub:3001

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
