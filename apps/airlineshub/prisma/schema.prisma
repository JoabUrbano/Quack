generator client {
  provider      = "prisma-client-js"
  output        = "./generated/client"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("AIRLINESHUB_DATABASE_URL")
}

model Airline {
  id      String @id @default(uuid())
  name    String @unique
  country String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  flights   Flight[]
}

enum FlightStatus {
  SCHEDULED
  DEPARTED
  ARRIVED
  DELAYED
  CANCELLED
}

model Airplane {
  id       String @id @default(uuid())
  model    String
  capacity Int

  flights Flight[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Flight {
  id                String   @id @default(uuid())
  airplaneId        String
  airplane          Airplane @relation(fields: [airplaneId], references: [id])
  flightNumber      Int      @unique @default(autoincrement())
  expectedDeparture DateTime
  expectedArrival   DateTime
  duration          Int

  terminal String
  gate     String

  airlineId String
  airline   Airline @relation(fields: [airlineId], references: [id])

  status FlightStatus @default(SCHEDULED)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
